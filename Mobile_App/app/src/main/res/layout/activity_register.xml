<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nama Lengkap -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:padding="16dp"
        android:layout_marginTop="20dp"/>

    <!-- Email -->
    <EditText
        android:id="@+id/emailInputRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Password -->
    <EditText
        android:id="@+id/passwordInputRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Plat Nomor -->
    <EditText
        android:id="@+id/vehiclePlateInputRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plat Nomor"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Jenis Kendaraan -->
    <TextView
        android:id="@+id/vehicleTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kendaraan"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/vehicleTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:padding="16dp"/>

    <!-- Merk Kendaraan -->
    <TextView
        android:id="@+id/brandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merk Kendaraan"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/brandSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:padding="16dp"/>

    <!-- Warna Kendaraan -->
    <EditText
        android:id="@+id/vehicleColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Warna Kendaraan"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Tombol Daftar -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Daftar"
        android:backgroundTint="#48D1CC"
        android:layout_marginTop="24dp"/>
</LinearLayout>
